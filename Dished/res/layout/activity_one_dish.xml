<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OneDishActivity" >
    
    <include android:id="@+id/header"
         layout="@layout/one_dish_header"
         android:layout_height="wrap_content"
         android:layout_width="fill_parent"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp">
        
		    <Button android:id="@+id/bEdit"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:layout_weight="1"/>
		    
		    <Button android:id="@+id/bDelete"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:layout_weight="1"/>
    </LinearLayout>
    
    <RelativeLayout 
	    android:orientation="horizontal" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="10dp">
	    
	     <ImageView android:id="@+id/imageView1"
	        android:layout_width="110dp"
	        android:layout_height="110dp"
	        android:gravity="center_vertical"
	        android:layout_alignParentTop="true"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="5dp"/>
	        
	     <TextView android:id="@+id/one_dish_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_alignTop="@id/imageView1"
	        android:layout_toRightOf="@id/imageView1"
	        android:textStyle="bold"
	        android:textSize="28sp"
	        android:textColor="#000000"
	        android:layout_marginBottom="5dp" />
        
	     <TextView android:id="@+id/one_dish_rest"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_below="@id/one_dish_name"
	        android:layout_marginTop="1dp"
	        android:layout_toRightOf="@id/imageView1"
	        android:textSize="22sp"
	        android:textColor="#000000"
	        android:layout_marginBottom="5dp" />

	     
	     <LinearLayout 
	         android:orientation="vertical"
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:layout_alignLeft="@+id/imageView1"
	         android:layout_below="@+id/imageView1"
	         android:layout_marginTop="20dp">
	         
		     <TextView android:id="@+id/one_dish_overall_txt"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
			     android:textSize="25sp"
			     android:textColor="#000000"
			     android:layout_marginTop="10dp"
			     android:layout_marginBottom="10dp"/>
		     
		     <View android:layout_width="match_parent"
		         android:layout_height="1dp"
		         android:background="#000000"/>
		     
		     <TextView android:id="@+id/one_dish_overall_txt1"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
			     android:textSize="25sp"
			     android:textColor="#000000"
			     android:layout_marginTop="10dp"
			     android:layout_marginBottom="10dp"/>
		     
		     <View
	         android:layout_width="match_parent"
	         android:layout_height="1dp"
	         android:background="#000000"/>
		     
		     <TextView android:id="@+id/one_dish_overall_txt2"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
			     android:textSize="25sp"
			     android:textColor="#000000"
			     android:layout_marginTop="10dp"
			     android:layout_marginBottom="10dp"/>

	     </LinearLayout>
     
	</RelativeLayout>
	
    

</LinearLayout>